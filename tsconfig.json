{
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "types": [
      "webpack-env"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@controller/*": [
        "src/server/controller/*"
      ],
      "@routes/*":["src/server/routes/*"],
      "@components/*":["src/client/components/*"],
      "@pages/*":["src/client/components/*"]
    },
  }
}

