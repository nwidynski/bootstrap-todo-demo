{
  "include": [
    "src/server/**/*.ts",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "paths": {
      "@controller/*": [
        "src/server/controller/*"
      ],
      "@routes/*":["src/server/routes/*"],
      "@components/*":["src/client/components/*"],
      "@pages/*":["src/client/components/*"]
    },
  }
}

