{
  "include": [
    "src/server/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "dom"],
    "paths": {
      "@controller/*": [
        "src/server/controller/*"
      ],
      "@routes/*":["src/server/routes/*"],
      "@components/*":["src/client/components/*"],
      "@pages/*":["src/client/components/*"]
    },
  }
}

